<div class="container">
  <h1 class="text-center">Vista de Productos</h1>
  <% if (products.length) { %>

    <table class="table table-striped table-hover table-dark">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Thumbnail</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product=> { %>
          <tr>
            <td>
              <%= product.title %>
            </td>
            <td>
              <%= product.price %>
            </td>
            <td><img src=<%= product.thumbnail %> ></td>
          </tr>
          <% }); %>
      </tbody>
    </table>
    <% } else { %>
      <p class="text-center"><mark>No hay productos</mark></p>
      <% } %>
</div>