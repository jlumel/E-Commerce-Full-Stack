<div class="container">
  <h1 class="text-center">Vista de Productos</h1>
  {{#if this.list}}

  <table class="table table-striped table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Price</th>
        <th scope="col">Thumbnail</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.list}}
      <tr>
        <td>{{this.title}}</td>
        <td>{{this.price}}</td>
        <td><img src={{this.thumbnail}} alt=""></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  {{> noProducts }}
  {{/if}}
</div>